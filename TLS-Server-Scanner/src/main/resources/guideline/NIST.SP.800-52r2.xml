<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<guideline>
    <name>NIST SP 800-52r2</name>
    <link>https://doi.org/10.6028/NIST.SP.800-52r2</link>
    <checks>
        <!-- General Checks on Version -->
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Servers shall support TLS 1.2.</name>
            <description>Servers shall support TLS 1.2.</description>
            <property>SUPPORTS_TLS_1_2</property>
            <result>TRUE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Servers should support TLS 1.3 and shall support TLS 1.3 by January 1, 2024.</name>
            <description>Servers should support TLS 1.3 and shall support TLS 1.3 by January 1, 2024.</description>
            <property>SUPPORTS_TLS_1_3</property>
            <result>TRUE</result>
            <requirementLevel>SHOULD</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Support of TLS 1.0 is discouraged.</name>
            <description>Support of TLS 1.0 is discouraged.</description>
            <property>SUPPORTS_TLS_1_0</property>
            <result>FALSE</result>
            <requirementLevel>SHOULD</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Support of TLS 1.1 is discouraged.</name>
            <description>Support of TLS 1.1 is discouraged.</description>
            <property>SUPPORTS_TLS_1_1</property>
            <result>FALSE</result>
            <requirementLevel>SHOULD</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Servers shall not support SSL 3.0.</name>
            <description>Servers shall not support SSL 3.0.</description>
            <property>SUPPORTS_SSL_3</property>
            <result>FALSE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Servers shall not support SSL 2.0.</name>
            <description>Servers shall not support SSL 2.0.</description>
            <property>SUPPORTS_SSL_2</property>
            <result>FALSE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <!-- Certificate -->
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="signatureCertificateCheck">
            <name>
                If the server supports TLS versions prior to TLS 1.2, the certificate should be signed with an algorithm
                consistent with the public key
            </name>
            <description>
                If the server supports TLS versions prior to TLS 1.2, the certificate should be signed with an algorithm
                consistent with the public key
            </description>
            <condition>
                <or>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_0</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_1</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                </or>
            </condition>
            <requirementLevel>SHOULD</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="hasPublicKeyCertificateCheck">
            <name>Shall be configured with one or more public-key certificates and the associated private keys</name>
            <description>
                Shall be configured with one or more public-key certificates and the associated private keys
            </description>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="certificateAgilityGuidelineCheck">
            <name>
                Should support the use of multiple server certificates with their associated private keys to support
                algorithm and key size agility
            </name>
            <description>
                Should support the use of multiple server certificates with their associated private keys to support
                algorithm and key size agility
            </description>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="signatureAlgorithmsCertGuidelineCheck">
            <name>Shall be configured with an RSA signature certificate or an ECDSA signature certificate</name>
            <description>Shall be configured with an RSA signature certificate or an ECDSA signature certificate
            </description>
            <requirementLevel>MUST</requirementLevel>
            <count>1</count>
            <algorithms>RSA</algorithms>
            <algorithms>ECDSA</algorithms>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Certificates shall be issued by CA that publishes revocation information in OCSP responses</name>
            <description>
                Certificates shall be issued by CA that publishes revocation information in OCSP responses
            </description>
            <property>SUPPORTS_OCSP</property>
            <result>TRUE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="certificateVersionGuidelineCheck">
            <name>Server certificate shall be an X.509 version 3 certificate</name>
            <description>Server certificate shall be an X.509 version 3 certificate</description>
            <version>3</version>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="certificateCurveGuidelineCheck">
            <name>For ECDSA: Curve P-256 or curve P-384 should be used in the public key</name>
            <description>For ECDSA: Curve P-256 or curve P-384 should be used in the public key</description>
            <groups>SECP256R1</groups>
            <groups>SECP384R1</groups>
            <requirementLevel>SHOULD</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="extendedKeyUsageCertificateCheck">
            <name>
                Server should be configured to allow use of extended key usage extension with key purpose specifically
                for server authentication
            </name>
            <description>
                Server should be configured to allow use of extended key usage extension with key purpose specifically
                for server authentication
            </description>
            <purpose>1.3.6.1.5.5.7.3.1</purpose>
            <requirementLevel>SHOULD</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="keySizeCertGuidelineCheck">
            <name>
                All server and client certificates shall contain public keys that offer at least 112 bits of security.
            </name>
            <description>
                All server and client certificates shall contain public keys that offer at least 112 bits of security.
            </description>
            <requirementLevel>MUST</requirementLevel>
            <ec>224</ec>
            <dsa>2048</dsa>
            <rsa>2048</rsa>
            <dh>2048</dh>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="hashAlgorithmStrengthCheck">
            <name>
                All server and client certificates and certificates in their certification paths shall be signed using
                SHA-224 or a stronger hashing algorithm.
            </name>
            <description>
                All server and client certificates and certificates in their certification paths shall be signed using
                SHA-224 or a stronger hashing algorithm.
            </description>
            <requirementLevel>MUST</requirementLevel>
            <min>SHA224</min>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="certificateValidityGuidelineCheck">
            <name>
                Certificate Validity Period should be 3 years or less.
            </name>
            <description>
                Certificate Validity Period should be 3 years or less.
            </description>
            <requirementLevel>SHOULD</requirementLevel>
            <years>3</years>
        </check>
        <!-- Cipher Suites -->
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="cipherSuiteGuidelineCheck">
            <name>Only listed Cipher Suites shall be used.</name>
            <description>
                Only listed Cipher Suites shall be used.
            </description>
            <requirementLevel>MUST</requirementLevel>
            <versions>TLS10</versions>
            <versions>TLS11</versions>
            <versions>TLS12</versions>
            <!-- Discouraged RSA Transition Cipher Suites -->
            <cipherSuites>TLS_RSA_WITH_AES_128_CCM</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_256_CCM</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_128_CCM_8</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_256_CCM_8</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_256_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_256_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_RSA_WITH_AES_256_GCM_SHA384</cipherSuites>
            <!-- Cipher Suites for ECDSA Certificates 1.2 -->
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_128_CCM</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_256_CCM</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_128_CCM_8</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_256_CCM_8</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_256_CBC_SHA384</cipherSuites>
            <!-- Cipher Suites for ECDSA Certificates 1.0, 1.1, 1.2 -->
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_ECDHE_ECDSA_WITH_AES_256_CBC_SHA</cipherSuites>
            <!-- Cipher Suites for RSA Certificates 1.2 -->
            <cipherSuites>TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_128_CCM</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_256_CCM</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_128_CCM_8</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_256_CCM_8</cipherSuites>
            <cipherSuites>TLS_ECDHE_RSA_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDHE_RSA_WITH_AES_256_CBC_SHA384</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_256_CBC_SHA256</cipherSuites>
            <!-- Cipher Suites for RSA Certificates 1.0, 1.1, 1.2 -->
            <cipherSuites>TLS_ECDHE_RSA_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_ECDHE_RSA_WITH_AES_256_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_DHE_RSA_WITH_AES_256_CBC_SHA</cipherSuites>
            <!-- Cipher Suites for DSA Certificates 1.2 -->
            <cipherSuites>TLS_DHE_DSS_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_DHE_DSS_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_DHE_DSS_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_DHE_DSS_WITH_AES_256_CBC_SHA256</cipherSuites>
            <!-- Cipher Suites for DSA Certificates 1.0, 1.1, 1.2 -->
            <cipherSuites>TLS_DHE_DSS_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_DHE_DSS_WITH_AES_256_CBC_SHA</cipherSuites>
            <!-- Cipher Suites for DH Certificates -->
            <!-- DSA-signed DH 1.2 -->
            <cipherSuites>TLS_DH_DSS_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_DH_DSS_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_DH_DSS_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_DH_DSS_WITH_AES_256_CBC_SHA256</cipherSuites>
            <!-- DSA-signed DH 1.0, 1.1, 1.2 -->
            <cipherSuites>TLS_DH_DSS_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_DH_DSS_WITH_AES_256_CBC_SHA</cipherSuites>
            <!-- RSA-signed DH 1.2 -->
            <cipherSuites>TLS_DH_RSA_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_DH_RSA_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_DH_RSA_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_DH_RSA_WITH_AES_256_CBC_SHA256</cipherSuites>
            <!-- RSA-signed DH 1.0, 1.1, 1.2 -->
            <cipherSuites>TLS_DH_RSA_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_DH_RSA_WITH_AES_256_CBC_SHA</cipherSuites>
            <!-- Cipher Suites for ECDH Certificates -->
            <!--  ECDSA-signed ECDH 1.2 -->
            <cipherSuites>TLS_ECDH_ECDSA_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDH_ECDSA_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_ECDH_ECDSA_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDH_ECDSA_WITH_AES_256_CBC_SHA384</cipherSuites>
            <!-- ECDSA-signed ECDH 1.0, 1.1, 1.2 -->
            <cipherSuites>TLS_ECDH_ECDSA_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_ECDH_ECDSA_WITH_AES_256_CBC_SHA</cipherSuites>
            <!-- RSA-signed ECDH 1.2 -->
            <cipherSuites>TLS_ECDH_RSA_WITH_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDH_RSA_WITH_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_ECDH_RSA_WITH_AES_128_CBC_SHA256</cipherSuites>
            <cipherSuites>TLS_ECDH_RSA_WITH_AES_256_CBC_SHA384</cipherSuites>
            <!-- RSA-signed ECDH 1.0, 1.1, 1.2 -->
            <cipherSuites>TLS_ECDH_RSA_WITH_AES_128_CBC_SHA</cipherSuites>
            <cipherSuites>TLS_ECDH_RSA_WITH_AES_256_CBC_SHA</cipherSuites>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="cipherSuiteGuidelineCheck">
            <name>Only listed Cipher Suites shall be used.</name>
            <description>
                Only listed Cipher Suites shall be used.
            </description>
            <requirementLevel>MUST</requirementLevel>
            <versions>TLS13</versions>
            <!-- Cipher Suites for ECDSA Certificates 1.3 -->
            <cipherSuites>TLS_AES_128_GCM_SHA256</cipherSuites>
            <cipherSuites>TLS_AES_256_GCM_SHA384</cipherSuites>
            <cipherSuites>TLS_AES_128_CCM_SHA256</cipherSuites>
            <cipherSuites>TLS_AES_128_CCM_8_SHA256</cipherSuites>
        </check>
        <!-- Implementation Considerations -->
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>Servers shall not be vulnerable to padding oracle.</name>
            <description>Servers shall not be vulnerable to padding oracle.</description>
            <property>VULNERABLE_TO_PADDING_ORACLE</property>
            <result>FALSE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <!-- TODO timestamp should be random -->
        <!-- Mandatory TLS Extensions -->
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>The server shall support secure renegotiation Extension.</name>
            <description>The server shall support secure renegotiation Extension.</description>
            <condition>
                <or>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_0</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_1</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_2</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                </or>
            </condition>
            <property>SUPPORTS_SECURE_RENEGOTIATION_EXTENSION</property>
            <result>TRUE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="extensionGuidelineCheck">
            <name>The server shall be able to process and respond to the server name indication extension.</name>
            <description>
                The server shall be able to process and respond to the server name indication extension.
            </description>
            <condition>
                <or>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_0</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_1</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_2</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_3</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                </or>
            </condition>
            <extension>SERVER_NAME_INDICATION</extension>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>The Extended Master Secret extension shall be supported.</name>
            <description>The Extended Master Secret extension shall be supported.</description>
            <condition>
                <or>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_0</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_1</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_2</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                </or>
            </condition>
            <property>SUPPORTS_EXTENDED_MASTER_SECRET</property>
            <result>TRUE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <!-- TODO Signature Algorithms -->
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>The Certificate Status Request extension shall be supported.</name>
            <description>The Certificate Status Request extension shall be supported.</description>
            <condition>
                <or>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_0</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_1</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_2</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_3</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                </or>
            </condition>
            <property>SUPPORTS_CERTIFICATE_STATUS_REQUEST</property>
            <result>TRUE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <!-- Conditional TLS Extensions -->
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="analyzedPropertyGuidelineCheck">
            <name>
                The Fallback Signaling Cipher Suite Value (SCSV) shall be supported if the server supports versions of
                TLS prior to TLS 1.2 and does not support TLS 1.3.
            </name>
            <description>
                The Fallback Signaling Cipher Suite Value (SCSV) shall be supported if the server supports
                versions of TLS prior to TLS 1.2 and does not support TLS 1.3.
            </description>
            <condition>
                <and>
                    <condition>
                        <or>
                            <condition>
                                <analyzedProperty>SUPPORTS_TLS_1_0</analyzedProperty>
                                <result>TRUE</result>
                            </condition>
                            <condition>
                                <analyzedProperty>SUPPORTS_TLS_1_1</analyzedProperty>
                                <result>TRUE</result>
                            </condition>
                        </or>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_3</analyzedProperty>
                        <result>FALSE</result>
                    </condition>
                </and>
            </condition>
            <property>SUPPORTS_TLS_FALLBACK_SCSV</property>
            <result>TRUE</result>
            <requirementLevel>MUST</requirementLevel>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="namedGroupsGuidelineCheck">
            <name>
                When elliptic curve cipher suites are configured, at least one of the NIST-approved curves, P-256
                (secp256r1) and P-384 (secp384r1), shall be supported as described in RFC 8422. Additional
                NIST-recommended elliptic curves are listed in SP 800-56A, Appendix D. Finite field groups that are
                approved for TLS in SP 800-56A, Appendix D may be supported.
            </name>
            <description>
                When elliptic curve cipher suites are configured, at least one of the NIST-approved curves, P-256
                (secp256r1) and P-384 (secp384r1), shall be supported as described in RFC 8422. Additional
                NIST-recommended elliptic curves are listed in SP 800-56A, Appendix D. Finite field groups that are
                approved for TLS in SP 800-56A, Appendix D may be supported.
            </description>
            <condition>
                <or>
                    <condition>
                        <analyzedProperty>SUPPORTS_ECDHE</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                    <condition>
                        <analyzedProperty>SUPPORTS_TLS_1_3</analyzedProperty>
                        <result>TRUE</result>
                    </condition>
                </or>
            </condition>
            <minGroups>2</minGroups>
            <requirementLevel>MUST</requirementLevel>
            <required>SECP256R1</required>
            <required>SECP384R1</required>
            <groups>SECP224R1</groups>
            <groups>SECP256R1</groups>
            <groups>SECP384R1</groups>
            <groups>SECP521R1</groups>
            <groups>SECT233K1</groups>
            <groups>SECT283K1</groups>
            <groups>SECT409K1</groups>
            <groups>SECT571K1</groups>
            <groups>SECT233R1</groups>
            <groups>SECT283R1</groups>
            <groups>SECT409R1</groups>
            <groups>SECT571R1</groups>
            <groups>FFDHE2048</groups>
            <groups>FFDHE3072</groups>
            <groups>FFDHE4096</groups>
            <groups>FFDHE6144</groups>
            <groups>FFDHE8192</groups>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="extensionGuidelineCheck">
            <name>The Key Share extension shall be supported if the server supports TLS 1.3</name>
            <description>The Key Share extension shall be supported if the server supports TLS 1.3</description>
            <condition>
                <analyzedProperty>SUPPORTS_TLS_1_3</analyzedProperty>
                <result>TRUE</result>
            </condition>
            <requirementLevel>MUST</requirementLevel>
            <extension>KEY_SHARE</extension>
        </check>
        <check xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="extensionGuidelineCheck">
            <name>The EC Point Format extension shall be supported if the server supports EC cipher suites</name>
            <description>
                The EC Point Format extension shall be supported if the server supports EC cipher suites
            </description>
            <condition>
                <and>
                    <condition>
                        <or>
                            <condition>
                                <analyzedProperty>SUPPORTS_TLS_1_0</analyzedProperty>
                                <result>TRUE</result>
                            </condition>
                            <condition>
                                <analyzedProperty>SUPPORTS_TLS_1_1</analyzedProperty>
                                <result>TRUE</result>
                            </condition>
                            <condition>
                                <analyzedProperty>SUPPORTS_TLS_1_2</analyzedProperty>
